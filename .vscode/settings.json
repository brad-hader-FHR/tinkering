{
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.rulers": [
    { "column": 8, "color": "#ff000020" },
    { "column": 80, "color": "#77777750" }
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "workbench.colorCustomizations": {
    "list.warningForeground": "#ffa726" // Warnings on the file name
  },
  "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": ["nodenext", "tsup"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "pnpm-lock.yaml",
    "node_modules",
    ".eslintrc*",
    "prettier.config.cjs",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ]
  // "prettier.configPath": "prettier.config.cjs"
}
